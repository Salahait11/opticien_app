cshtml
@model Opticien_APP.Models.Client

@{
    ViewBag.Title = "Edit";
}
<div class="container">
<h2>Edit</h2>
    <hr class="my-4" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Client</h4>
        <hr class="my-4" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="row mb-3">
            @Html.LabelFor(model => model.Nom, htmlAttributes: new { @class = "control-label col-md-2" , @style="font-weight: bold;"})
            <div class="col-md-6">
                @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter Name" } })
                @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" ,@style="font-weight: bold;"})
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.Prenom, htmlAttributes: new { @class = "control-label col-md-2", @style="font-weight: bold;" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control", @placeholder="Enter Prenom" } })
                @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger", @style="font-weight: bold;" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.DateDeNaissance, htmlAttributes: new { @class = "control-label col-md-2",@style="font-weight: bold;" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DateDeNaissance, new { htmlAttributes = new { @class = "form-control", @type = "date", @placeholder = "Enter date of birth", @Value = Model.DateDeNaissance.ToString("dd/MM/yyyy") } })
                @Html.ValidationMessageFor(model => model.DateDeNaissance, "", new { @class = "text-danger", @style="font-weight: bold;" })
            </div>    
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.Adresse, htmlAttributes: new { @class = "control-label col-md-2",@style="font-weight: bold;" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Adresse, new { htmlAttributes = new { @class = "form-control" , @placeholder="Enter Adresse"} })
                @Html.ValidationMessageFor(model => model.Adresse, "", new { @class = "text-danger" ,@style="font-weight: bold;"})
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.NumeroDeTelephone, htmlAttributes: new { @class = "control-label col-md-2",@style="font-weight: bold;" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.NumeroDeTelephone, new { htmlAttributes = new { @class = "form-control" ,@placeholder="Enter phone number"} })
                @Html.ValidationMessageFor(model => model.NumeroDeTelephone, "", new { @class = "text-danger",@style="font-weight: bold;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index",null, new { @class = "btn btn-secondary" })
</div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}