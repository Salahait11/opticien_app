cshtml
@model IEnumerable<Opticien_APP.Models.Client>

@{
    ViewBag.Title = "Clients";
}

<div class="container">
    <h2><i class="fas fa-users fa-fw accent-color"></i> Clients</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
             @using (Html.BeginForm("Index", "Client", FormMethod.Get, new { @class = "form-inline" }))
            {
                @Html.TextBox("searchString", null, new { @class = "form-control mr-2", placeholder = "Rechercher par nom ou prenom" })
                <button type="submit" class="btn btn-outline-secondary">Rechercher</button>
            }
            @Html.ActionLink("Ajouter un Client", "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prenom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateDeNaissance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Adresse)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumeroDeTelephone)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prenom)
                        </td>
                        <td>
                             @Html.DisplayFor(modelItem => item.DateDeNaissance, "{0:dd/MM/yyyy}")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adresse)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroDeTelephone)
                        </td>
                        <td>
                            @Html.ActionLink("Modifier", "Edit", new { id = item.ID }, new { @class = "btn btn-sm btn-warning" })
                            @Html.ActionLink("DÃ©tails", "Details", new { id = item.ID }, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Supprimer", "Delete", new { id = item.ID }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

